<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jjariza.footballleaguesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_pretty"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FootballLeaguesApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".core.WebActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.TeamDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.MainActivity" />
    </application>

</manifest>